{
  "include": ["src/**/*"],
  "compilerOptions": {
    "target": "ES2021",
    "module": "ESNext",
    "lib": ["ES2021", "DOM"],
    "moduleResolution": "Node",

    "experimentalDecorators": true,
    "useDefineForClassFields": false,

    "strict": true,
    "noEmitOnError": true,
    "skipLibCheck": true,

    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true
  }
}
